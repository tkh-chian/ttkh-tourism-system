{
  "name": "ttkh-tourism-system",
  "version": "1.0.0",
  "description": "TTKH旅游管理系统 - 完整的泰国旅游产品预订管理平台",
  "main": "run-tests.js",
  "scripts": {
    "start": "node run-tests.js",
    "init-db": "cd backend && node init-simple.js",
    "start-backend": "cd backend && node simple-server.js",
    "start-frontend": "cd frontend && npm start",
    "test": "node run-tests.js",
    "dev": "concurrently \"npm run start-backend\" \"npm run start-frontend\"",
    "build": "cd frontend && npm run build",
    "visual:test": "node ttkh-tourism-system/playwright/visual-test.js",
    "install-all": "npm install && cd backend && npm install && cd ../frontend && npm install"
  },
  "keywords": [
    "tourism",
    "travel",
    "booking",
    "thailand",
    "china",
    "react",
    "nodejs",
    "mysql"
  ],
  "author": "TTKH Development Team",
  "license": "MIT",
  "dependencies": {
    "@ant-design/icons": "^6.0.0",
    "@types/antd": "^0.12.32",
    "antd": "^5.26.7",
    "axios": "^1.11.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "dotenv": "^17.2.1",
    "mysql2": "^3.14.3",
    "puppeteer": "^24.16.0",
    "react-i18next": "^15.6.1",
    "sequelize": "^6.37.7",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/ttkh-tourism-system.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/ttkh-tourism-system/issues"
  },
  "homepage": "https://github.com/your-org/ttkh-tourism-system#readme"
}
